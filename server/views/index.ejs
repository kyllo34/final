<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/module.css" />
  <link rel="stylesheet" href="/css/theme.css" />
</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="characters">

      <% for(let x = 0; x < results.length; x++) { %>
      <div class="character">
        <header>

          <h2><%= results[x].name %></h2>
        </header>
        <span><%= results[x].likes || 0 %></span>
        <button class="upvote">Upvote</button>
      </div>
      <% } %>

    </section>
    <script id="newCharacters-template" type="text/x-handlebars-template">
      <div class="newCharacters">
        <header>
          <h2>{{name}}</h2>
        </header>
        <span>{{likes}}</span>
        <button class="upvote">Upvote</button>
        {{{body}}}
      </div>
    </script>
    <div>
      <button class="getMoreCharacters">Get More Characters</button>
    </div>
  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.10/handlebars.js"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.js"></script>

  <script src="/js/app.js"></script>
</body>

</html>
